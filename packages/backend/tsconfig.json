{
    "extends"         : "../../tsconfig.base.json",
    
    "compilerOptions" : {
        /* 🎯 Target & Environment */
        "target"                 : "ES2020",
        "lib"                    : [ "ES2020" ],
        
        /* 🔧 Module settings for Node + ESM */
        "module"                 : "NodeNext",
        "moduleResolution"       : "NodeNext",
        
        /* 📤 Output settings */
        "outDir"                 : "dist",
        "rootDir"                : "src",
        "sourceMap"              : true,
        "declaration"            : true,
        "declarationMap"         : true,
        "removeComments"         : true,
        "incremental"            : false,
        
        /* 🧪 Experimental features */
        "emitDecoratorMetadata"  : true,
        "experimentalDecorators" : true,
        
        /* 🔗 Path Aliases */
        "baseUrl"                : ".",
        "paths"                  : { "~/*" : [ "./src/*" ] }
    },
    
    /* 📁 File System Scope */
    "include"         : [ "src/**/*" ],
    "exclude"         : [ "dist", "node_modules" ]
}
